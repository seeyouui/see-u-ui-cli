{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["es2017", "dom"],
    "jsx": "preserve",
    "types": ["@dcloudio/types", "vue", "vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.vue", "tests/**/*", "vitest.config.ts"]
}
